    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'fifteen_puzzle'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fifteen_puzzle",
                    "--package=fifteen_puzzle"
                ],
                "filter": {
                    "name": "fifteen_puzzle",
                    "kind": "bin"
                }
            },
            "args": [
                "astr",
                "manh",
                "puzzle.txt",
                "output.txt",
                "stats.txt"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'fifteen_puzzle'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=fifteen_puzzle",
                    "--package=fifteen_puzzle"
                ],
                "filter": {
                    "name": "fifteen_puzzle",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
